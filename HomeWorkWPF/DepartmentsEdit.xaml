<Window x:Class="HomeWorkWPF.DepartmentsEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWorkWPF"
        mc:Ignorable="d"
        Title="Редактирование организации" Height="220" Width="400">
    <StackPanel>
        <StackPanel.Resources>
            <Style TargetType="StackPanel">
                <Setter Property="Margin" Value="10"></Setter>
            </Style>
        </StackPanel.Resources>
        <Label Content="Id"/>
        <TextBox x:Name="IdTextBox" IsEnabled="False"/>
        <Label Content="Название"/>
        <TextBox x:Name="TitleTextBox"/>
        <Button Margin="0 10" Height="50" FontSize="26" FontWeight="DemiBold" Click="Save_Click">Save</Button>
    </StackPanel>
</Window>
