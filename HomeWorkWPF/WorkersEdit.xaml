<Window x:Class="HomeWorkWPF.WorkersEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWorkWPF"
        mc:Ignorable="d"
        Title="Редактирование рабочих" Height="250" Width="400" Closed="Close_Click">
    <StackPanel>
       <StackPanel.Resources>
           <Style TargetType="StackPanel">
               <Setter Property="Margin" Value="10"></Setter>
           </Style>
       </StackPanel.Resources>
        <Label>ФИО:</Label>
        <TextBox x:Name="FIOTextBox"></TextBox>
        <Label>Возраст:</Label>
        <TextBox x:Name="AgeTextBox"></TextBox>
        <Label>Компания:</Label>
        <ComboBox x:Name="DepartmentComboBoxName" DisplayMemberPath="Department"></ComboBox>
        <Button Margin="0 10" Height="50" FontSize="26" FontWeight="DemiBold" Click="Save_Click">Save</Button>
    </StackPanel>
</Window>
